<h1>Photo Gallery</h1>

{% imagegrid %}
  {% for photo in photos %}
    <figure class="image-figure image-layout-grid">
      <input type="checkbox" id="img-{{ loop.index0 }}" class="image-zoom-toggle">
      <label for="img-{{ loop.index0 }}" class="image-zoom-label" tabindex="0">
        <img src="{{ photo.src }}" alt="{{ photo.alt }}" loading="lazy">

        <!-- Enhanced metadata sidebar -->
        <div class="image-metadata" id="meta-{{ loop.index0 }}">
          <h3>Photo Details</h3>

          {% if photo.alt %}
          <div class="meta-item">
            <img src="../public/icons/file.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Filename</label>
              <span>{{ photo.alt }}</span>
            </div>
          </div>
          {% endif %}

          {% if photo.date %}
          <div class="meta-item">
            <img src="../public/icons/calendar.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Date</label>
              <span>{{ photo.date | readableDate('dd LLLL yyyy') }}</span>
            </div>
          </div>
          {% endif %}

          {% if photo.camera %}
          <div class="meta-item">
            <img src="../public/icons/camera.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Camera</label>
              <span>{{ photo.camera }}</span>
            </div>
          </div>
          {% endif %}

          {% if photo.locationName %}
          <div class="meta-item">
            <img src="../public/icons/location.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Location</label>
              <span>{{ photo.locationName }}</span>
            </div>
          </div>
          {% endif %}

          {% if photo.dimensions %}
          <div class="meta-item">
            <img src="../public/icons/image.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Dimensions</label>
              <span>{{ photo.dimensions }}</span>
            </div>
          </div>
          {% endif %}

          {% if photo.techDetails %}
          <div class="meta-item">
            <img src="../public/icons/settings.svg" class="meta-icon" alt="">
            <div class="meta-content">
              <label>Camera Settings</label>
              <span class="tech-details">
                {% if photo.techDetails.iso %}ISO {{ photo.techDetails.iso }}{% endif %}
                {% if photo.techDetails.aperture %}{% if photo.techDetails.iso %} â€¢ {% endif %}{{ photo.techDetails.aperture }}{% endif %}
                {% if photo.techDetails.focalLength %}{% if photo.techDetails.iso or photo.techDetails.aperture %} â€¢ {% endif %}{{ photo.techDetails.focalLength }}{% endif %}
                {% if photo.techDetails.exposureTime %}{% if photo.techDetails.iso or photo.techDetails.aperture or photo.techDetails.focalLength %} â€¢ {% endif %}{{ photo.techDetails.exposureTime }}{% endif %}
              </span>
            </div>
          </div>
          {% endif %}

          {% if photo.description %}
          <div class="meta-item">
            <div class="meta-content">
              <label>Description</label>
              <span>{{ photo.description }}</span>
            </div>
          </div>
          {% endif %}

        </div>

        <label for="img-{{ loop.index0 }}" class="image-close-btn" tabindex="0" aria-label="Close image overlay">âœ•</label>
      </label>

      <figcaption>
        {{ photo.alt }}
        {% if photo.date %}<span class="photo-date">{{ photo.date | readableDate('dd LLL yyyy') }}</span>{% endif %}
      </figcaption>
    </figure>
  {% endfor %}
{% endimagegrid %}
